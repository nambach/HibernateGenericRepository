<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL9Dialect</property>

        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>

        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/MovieTicket</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">721997nam</property>

        <property name="hibernate.jdbc.batch_size">10</property>

        <property name="show_sql">true</property>

        <!--Mapping classes goes here-->
        <mapping class="model.Room"/>
        <mapping class="model.Product"/>

    </session-factory>
</hibernate-configuration>

